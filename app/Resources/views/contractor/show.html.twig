{% extends 'base.html.twig' %}

{% block body %}
    <h1>Contractor</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ contractor.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ contractor.name }}</td>
            </tr>
            <tr>
                <th>Budgetid</th>
                <td>{{ contractor.budgetid }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('contractor_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('contractor_edit', { 'id': contractor.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
